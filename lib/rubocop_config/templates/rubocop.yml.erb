inherit_gem:
<% if @departments %>
  sakuro-rubocop-config:
<% @departments.each do |dept| %>
    - config/cops/<%= dept.downcase %>.yml
<% end %>
<% else %>
  sakuro-rubocop-config: config/base.yml
<% end %>

AllCops:
  NewCops: enable
  TargetRubyVersion: <%= detected_ruby_version %>

